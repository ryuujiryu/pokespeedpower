script Route51_Rival {
    applymovement (LOCALID_PLAYER, Common_Movement_FaceUp)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_FaceLeft)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox("Where the heck is…")
    closemessage
    applymovement (LOCALID_PLAYER, Common_Movement_FaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Route51_Movement_WalkToRival)
    waitmovement (0)
    addobject (LOCALID_ROUTE51_RIVAL)
    faceplayer
    if (checkplayergender != MALE) {
         setspeaker("SHINYA")
         msgbox ("So… … … wow. T'was a great way 'ta start\n" "our journey, huh…? … … …\p" "But I'm sure they've kicked the ARC away.\n" "Can 'ya call MITSURU, actually?\n" "It's been hours, so all that mess\n" "should be over by now.$" )
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("Nothing like nearly getting imprisoned\n" "to start a journey, huh.\p" "…Still. I trust that they took care of\n" "those ARC soldiers by now.\p" "Say, why don't you call them?\n" "It’s been hours since we arrived.$")
        closemessage
    }
    applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox("That SOLDIER took my PŒDA from me\n" "during our fight… … …")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("…Uhm. Well, I'll call 'em on mine.\n" "And we'll buy 'ya a new one soon!\p" "Why don'tcha heal your POKéMON\n" "while I call 'em?$")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("Well, just your luck.\n" "No problem, I’ll call them on mine.\p" "We’ll buy you a new one when we get\n" "to a shop or something.\p" "Why don't you heal your POKéMON\n" "while I call them?$")
        closemessage
    }
    call (Common_EventScript_OutOfCenterPartyHeal)
    pokenavcall ("Bzzt… … … … … bzz… … … … … …$")
    waitmessage
    fadenewbgm (MUS_AW2_405)
    playse (SE_BANG)
    waitse
    playse (SE_M_EXPLOSION)
    waitse
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox ("What the heck…")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("MITSURU")
    pokenavcall ("Bzz… … … 'cuz… bzz… … …\n" "ARC… … set … island ablaze…$")
    waitmessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("What what what?! Anegimi!\n" "We have to go back and help them!\p" "FLYGON, SKARMORY, take us back!")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("No, no, no! Why would they do this?\n" "The civilians have no fault!\p" "We have to go back to help!$")
        closemessage
    }
    applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox ("We cannot waste the chance they have\n" "given us to take back the throne!$")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Angry)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    closemessage
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("Anegimi! Who cares 'bout that now!?\n" "We have to… we have… to help…$")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("What kinds of rulers would we be if we\n" "did not help our loyal subjects?!\p" "SKARMORY, take me back!$")
        closemessage
    }
    setspeaker("MITSURU")
    pokenavcall ("It's fine… … … we are… … …\n" "fighting back… … …bzz …  if needed… …\l" "… got POKéMON… … …to flee with…\p" "Go… … …and free… … …NIHON…\p" "… … … … … … …$")
    waitmessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("Cousin… was that supposed to\n" "calm me down…?$")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("MITSURU… … … … … … … … Okay.$")
        closemessage
    }
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkDownSlow)
    waitmovement (0)
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("Or just make me worry more…$")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox("No matter their fate… … we have\n" "a throne to claim back.$")
        closemessage
    }
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkDownSlow)
    waitmovement (0)
    fadedefaultbgm
    setvar (VAR_RIVALS_STATE, 2)
    release
    end
}

script Route51_Rival2 {
    if (checkplayergender != MALE) {
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Angry)
        waitmovement (0)
        setspeaker("SHINYA")
        msgbox ("CITRUS ISLAND… we finally left it,\n" "but at what cost?$")
        closemessage
        faceplayer
        setspeaker("SHINYA")
        msgbox ("Anegimi. Go to the ELEMENTAL TEMPLE.\n" "I'll fight the local PATH GUARDIANS\l" "later. I need to calm myself first…$")
        closemessage
    } else {
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Pensive)
        waitmovement (0)
        setspeaker("FUUKA")
        msgbox("A ruler has to be strong.\n" "For the sake of her subjects…$")
        closemessage
        faceplayer
        setspeaker("FUUKA")
        msgbox ("Anigimi? Why are you still here? Go to\n" "the ELEMENTAL TEMPLE.\p" "I need to stay alone for a bit.\n" "I'll fight the PATH GUARDIANS later.$")
        closemessage
    }
        applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
        waitmovement (0)
        applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
        waitmovement (0)
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
        waitmovement (0)
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
        waitmovement (0)
    if (checkplayergender != MALE) {
        setspeaker("SHINYA")
        msgbox ("What? I forgot something?\n" "Oh, 'ya right…\p" "I forgot, sorry… I'm not in the mood.$")
        closemessage
    } else {
        setspeaker("FUUKA")
        msgbox ("Oh, true. The PROFESSOR was\n" "supposed to give us those.\p" "You sure could have waited a better\n" "moment to remind me, though…$")
        closemessage
    }
        faceplayer
        giveitem (ITEM_POKE_BALL, 5)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_FaceDown)
    setflag (FLAG_RIVAL_POKEBALLS)
    release
    end
}

script Route51_Rival3 {
    if (!flag(FLAG_RIVAL_POKEBALLS)){call(Route51_Rival2)}
    else {
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_FaceDown)
    if (checkplayergender != MALE) {
    setspeaker("SHINYA")
    msgbox ("… … … … … … …$")
    } else {
    setspeaker("FUUKA")
    msgbox ("… … … … … … …$")
    }
    closemessage
    release
    end
    }
}

movement Route51_Movement_WalkToRival {
    walk_fast_right * 4
    walk_fast_up * 1
    walk_fast_right * 3
    face_left
    step_end
}