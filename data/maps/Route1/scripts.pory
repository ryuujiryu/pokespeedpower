script Route51_Rival {
    applymovement (LOCALID_PLAYER, Common_Movement_FaceUp)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_FaceLeft)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    msgbox("Where the heck is…")
    closemessage
    applymovement (LOCALID_PLAYER, Common_Movement_FaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Route51_Movement_WalkToRival)
    waitmovement (0)
    addobject (LOCALID_ROUTE51_RIVAL)
    faceplayer
    if (checkplayergender != MALE) {
         msgbox ("SHIN'YA: So… … … wow. T'was a great way\n" "to start our journey, huh…? … … …\p" "But I trust that the tactician and\n" "MITSURU have kicked them out.\p" "Can you call 'em, actually?\n" "It's been hours, so all that mess\l" "should be over by now.$" )
        closemessage
    } else {
        msgbox("FUUKA: Nothing like nearly gettin’\n" "imprisoned to start a journey, huh.\p" "FUUKA: …Still. I trust that they\n" "took care of those UNOVANS by now.\p" "Say, why don't you call them?\n" "It’s been hours since we arrived.$")
        closemessage
    }
    applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    msgbox("That SOLDIER took my PŒDA from me\n" "during our fight… … …")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    if (checkplayergender != MALE) {
        msgbox ("SHIN'YA: …Uhm. Well, I'll call 'em on mine.\n" "And we shall buy a new one soon!\p" "Why don't you heal your POKéMON\n" "while I call 'em?$")
        closemessage
    } else {
        msgbox("FUUKA: Well, just your luck.\n" "Alright, I’ll call ‘em on mine.\p" "We’ll buy you a new one when we get\n" "to a shop or something.\p" "Why don't you heal your POKéMON\n" "while I call them?$")
        closemessage
    }
    call (Common_EventScript_OutOfCenterPartyHeal)
    pokenavcall ("Bzzt… … … … … bzz… … … … … …$")
    waitmessage
    fadenewbgm (MUS_AW2_405)
    playse (SE_BANG)
    waitse
    playse (SE_M_EXPLOSION)
    waitse
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    msgbox ("What the heck…")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    pokenavcall ("MITSURU: Bzz… … … 'cuz… bzz… … …\n" "ARC… … set … island ablaze…$")
    waitmessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
    waitmovement (0)
    if (checkplayergender != MALE) {
        msgbox ("SHIN'YA: What what what?! Anegimi!\n" "We have to go back and help them!\p" "FLYGON, SKARMORY, take us back!")
        closemessage
    } else {
        msgbox("FUUKA: No, no, no! Why would they do this?\n" "The civilians have no fault!\p" "We have to go back to help!$")
        closemessage
    }
    applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    msgbox ("We cannot waste the chance they have\n" "given us to take back the throne!$")
    closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Angry)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    closemessage
    if (checkplayergender != MALE) {
        msgbox ("SHIN'YA: Anegimi! FUUKA! Who cares about\n" "the throne now! We have to… we have…$")
        closemessage
    } else {
        msgbox("FUUKA: What kinds of rulers would we be\n" "if we did not help our loyal subjects?!\p" "SKARMORY, take me back!$")
        closemessage
    }
    pokenavcall ("MITSURU: It's fine… … … we have… … …\n" "many FLYING… … …bzzt … and… …\l" "… WATER-types… … …to flee with…\p" "go… … …and free… … …NIHON…\p" "… … … … … … …$")
    waitmessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Pensive)
    waitmovement (0)
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
    waitmovement (0)
    if (checkplayergender != MALE) {
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkInPlaceLeft)
        waitmovement (0)
        msgbox ("SHIN'YA: Cousin… was that supposed to\n" "calm me down…?$")
        closemessage
    } else {
        msgbox("FUUKA: MITSURU… … … … … … … … Okay.$")
        closemessage
    }
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkDownSlow)
    waitmovement (0)
    if (checkplayergender != MALE) {
        msgbox ("Or just make me worry more…$")
        closemessage
    } else {
        msgbox("No matter their fate… … we have\n" "a throne to claim back.$")
        closemessage
    }
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_WalkDownSlow)
    waitmovement (0)
    fadedefaultbgm
    setvar (VAR_RIVALS_STATE, 2)
    release
    end
}

script Route51_Rival2 {
    if (checkplayergender != MALE) {
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Angry)
        waitmovement (0)
        msgbox ("SHIN'YA: CITRUS ISLAND…\n" "We finally left it, but at what cost?$")
        closemessage
        faceplayer
        msgbox ("Anegimi. Go to the ELEMENTAL TEMPLE.\n" "I'll fight the local PATH GUARDIANS\l" "later. I need to calm myself first…$")
        closemessage
    } else {
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Pensive)
        waitmovement (0)
        msgbox("FUUKA: A ruler should be strong.\n" "For the sake of her subjects…$")
        closemessage
        faceplayer
        msgbox ("Anigimi? Why are you still here? Go to\n" "the ELEMENTAL TEMPLE.\p" "I need to stay alone for a bit.\n" "I'll fight the PATH GUARDIANS later.$")
        closemessage
    }
        applymovement (LOCALID_PLAYER, Common_Movement_Pensive)
        waitmovement (0)
        applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
        waitmovement (0)
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_ExclamationMark)
        waitmovement (0)
        applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_Delay48)
        waitmovement (0)
    if (checkplayergender != MALE) {
        msgbox ("SHIN'YA: What? I forgot something?\n" "Oh, you are right.$")
        closemessage
    } else {
        msgbox ("FUUKA: Oh, yeah. The PROF. was\n" "supposed to give us those.$")
        closemessage
    }
        faceplayer
        giveitem (ITEM_POKE_BALL, 5)
        msgbox ("I forgot, sorry… I'm not in the mood.$")
        closemessage
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_FaceDown)
    setflag (FLAG_RIVAL_POKEBALLS)
    release
    end
}

script Route51_Rival3 {
    if (!flag(FLAG_RIVAL_POKEBALLS)){call(Route51_Rival2)}
    else {
    applymovement (LOCALID_ROUTE51_RIVAL, Common_Movement_FaceDown)
    msgbox ("… … … … … … …$")
    }
    closemessage
    release
    end
}

movement Route51_Movement_WalkToRival {
    walk_fast_right * 4
    walk_fast_up * 1
    walk_fast_right * 3
    face_left
    step_end
}