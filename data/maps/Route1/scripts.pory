script Route51_AromaGirl {
	lock
	faceplayer
	if (!flag(FLAG_RECEIVED_WAILMER_PAIL)) {
	    msgbox ("La-la-laœ… …\p" "Hmm…? Oh, hello!\n" "Are you into gardening, too?\p" "But I see that you don't have a\n" "WAILMER PAIL! Here, I got a spare!$")
	    setflag (FLAG_RECEIVED_WAILMER_PAIL)
		playfanfare (MUS_OBTAIN_ITEM)
	    waitfanfare
    } else {
	msgbox ("While BERRY plants are growing,\n" "water them with the WAILMER PAIL.\p" "Oh, another thing.\p" "If you don't pick BERRIES for a while,\n" "they'll drop off onto the ground.\l" "But they'll sprout again.\p" "Isn't that awesome?\n" "It's like they have the will to live.$")
	}
	release
	end
}

