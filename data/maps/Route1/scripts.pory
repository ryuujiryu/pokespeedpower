script Route1_Isamu {
    if (defeated(TRAINER_SP_ISAMU)) {
    applymovement (LOCALID_PLAYER, Common_Movement_Music)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox ("If the WINGULLs could talk with\n" "me, I'd like to exchange some news! œ$")
    closemessage
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_Angry)
    waitmovement (0)
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("ISAMU")
    msgbox ("I'm not in the mood for singing! Scram!$")
    release
    end
    }
    else {
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_Music)
    waitmovement (0)
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("ISAMU")
    msgbox ("Put your back into it!\n" "Heave, ho! Heave, ho! œ\p" ". . . . . . .\n" "Oh! A bite!$")
    closemessage
	applymovement (LOCALID_PLAYER, Common_Movement_Music)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceRight)
    waitmovement (0)
    applymovement (LOCALID_PLAYER, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("{PLAYER}")
    msgbox ("Soran, soran, soran! Woo!$")
    closemessage
    playbgm (MUS_ENCOUNTER_HIKER, FALSE)
   	applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_ExclamationMark)
    waitmovement (0)
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_WalkInPlaceLeft)
    waitmovement (0)
    applymovement (LOCALID_ROUTE1_ISAMU, Common_Movement_Delay48)
    waitmovement (0)
    setspeaker("ISAMU")
	msgbox ("Argh! You made me lose the fish!$")
	trainerbattle_no_intro (TRAINER_SP_ISAMU, format("And i even lost the battle!$"))
    release
	end
    }
}

